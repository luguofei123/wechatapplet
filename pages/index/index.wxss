page{background: #42BD56;}
.search-container{
  position: fixed;
  height:90rpx;
  left: 0;
  right: 0;
  top:0;
  background: #42BD56;
  color:#fff;
  z-index: 100;
  padding: 0 10rpx;
  }
.search-container input{
  height: 80rpx;
  background: #fff;
  padding-left: 60rpx;
  color: #aaa;
  border-radius: 8rpx;
}
.search-container icon{
  position: absolute;
  top:20rpx;
  left:20rpx;
}

.book-container{
  position: relative;
  top:90rpx;
  width: 100%;
  height: 1100rpx;
  padding-top:-10rpx;
  background: #dedede;
}
.header{
  padding:20rpx 30rpx;
}
.header text{
  color: #a6a6a6;
}
.cover{margin-right:10rpx;}
.cover-img{
  width: 120rpx;
  height: 160rpx;
}
.index-list-item{
  padding:10rpx 10rpx;
  display: flex;
  font-size: 40rpx;
}
.title{
  display: inline-block;
  height: 90rpx;
  padding-top: 20rpx;
  overflow: hidden;
}
.desc{
  display: block;
  color: #AAA;
  font-size: 30rpx;
  white-space:nowrap;
  }

  .refresh-footer {
  text-align: center;
  padding: 10rpx 0;
}